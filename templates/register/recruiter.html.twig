{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<section class="text-slate-600 bg-white body-font relative">
    <div class="container px-5 py-24 mx-auto">
        <div class="flex flex-col text-center w-full mb-12">
            <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900">Register</h1>
            <p class="lg:w-2/3 mx-auto leading-relaxed text-base">
                Register to start recruiting and managing job applications effectively.
            </p>
        </div>

        {% for message in app.flashes('success') %}
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4">
                {{ message }}
            </div>
        {% endfor %}

        <div class="bg-gray-50 p-8 rounded-lg shadow-lg max-w-lg mx-auto">
            {{ form_start(form) }}
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    {{ form_row(form.first_name, {
                        'label_attr': {'class': 'text-lg font-medium text-slate-700'},
                        'attr': {'class': 'w-full border-gray-300 rounded-md shadow-sm p-2'}
                    }) }}
                </div>

                <div>
                    {{ form_row(form.last_name, {
                        'label_attr': {'class': 'text-lg font-medium text-slate-700'},
                        'attr': {'class': 'w-full border-gray-300 rounded-md shadow-sm p-2'}
                    }) }}
                </div>

                <div class="col-span-2">
                    {{ form_row(form.username, {
                        'label_attr': {'class': 'text-lg font-medium text-slate-700'},
                        'attr': {'class': 'w-full border-gray-300 rounded-md shadow-sm p-2'}
                    }) }}
                </div>

                <div class="col-span-2">
                    {{ form_row(form.email, {
                        'label_attr': {'class': 'text-lg font-medium text-slate-700'},
                        'attr': {'class': 'w-full border-gray-300 rounded-md shadow-sm p-2'}
                    }) }}
                </div>

                <div>
                    {{ form_row(form.plainPassword.first, {
                        'label_attr': {'class': 'text-lg font-medium text-slate-700'},
                        'attr': {'class': 'w-full border-gray-300 rounded-md shadow-sm p-2'}
                    }) }}
                </div>

                <div>
                    {{ form_row(form.plainPassword.second, {
                        'label_attr': {'class': 'text-lg font-medium text-slate-700'},
                        'attr': {'class': 'w-full border-gray-300 rounded-md shadow-sm p-2'}
                    }) }}
                </div>
            </div>

            <div class="mt-6 text-center">
                <button type="submit" class="text-white bg-indigo-500 border-0 py-2 px-8 focus:outline-none hover:bg-indigo-600 rounded text-lg">
                    Register
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</section>
{% endblock %}