{% extends 'base.html.twig' %}

{% block title %}Choose Registration Type{% endblock %}

{% block body %}
<section class="text-slate-600 bg-white body-font relative">
    <div class="container px-5 py-24 mx-auto text-center">
        <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900">Register</h1>
        <p class="lg:w-2/3 mx-auto leading-relaxed text-base">
            Please select the type of account you want to create.
        </p>
        <div class="flex justify-center mt-8 space-x-4">
            <a href="{{ path('app_register_job_seeker') }}" class="text-white bg-blue-500 border-0 py-2 px-6 focus:outline-none hover:bg-blue-600 rounded text-lg">
                Register as Job Seeker
            </a>
            <a href="{{ path('app_register_recruiter') }}" class="text-white bg-green-500 border-0 py-2 px-6 focus:outline-none hover:bg-green-600 rounded text-lg">
                Register as Recruiter
            </a>
        </div>
    </div>
</section>
{% endblock %}