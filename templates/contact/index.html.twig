{% extends 'base.html.twig' %}

{% block title %}Contact Us{% endblock %}

{% block body %}
<section class="text-slate-600 bg-white body-font relative">
    <div class="container px-5 py-24 mx-auto">
        <div class="flex flex-col text-center w-full mb-12">
            <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900">Contact Us</h1>
            <p class="lg:w-2/3 mx-auto leading-relaxed text-base">
                Weâ€™d love to hear from you! Whether you have a question, feedback, or just want to say hello, feel free to reach out. Our team is here to help and will get back to you as soon as possible.
            </p>
        </div>

        {% for message in app.flashes('success') %}
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4">
                {{ message }}
            </div>
        {% endfor %}

        <div class="bg-gray-50 p-6 rounded-lg shadow-md w-full">
            {{ form_start(form) }}
    
            <div class="flex flex-wrap -mx-2">
                <!-- Cover Letter Field Only -->
                <div class="mb-6 lg:w-2/4 px-2">
                    {{ form_label(form.fullName, 'Full Name', {'label_attr': {'class': 'text-lg font-medium text-slate-700'}}) }}
                    <div class="mt-2">
                        {{ form_widget(form.fullName, {'attr': {'class': 'w-full border-gray-300 rounded-md shadow-sm p-2 h-10'}}) }}

                        {% if form.fullName.vars.errors is not empty %}
                        <div class="text-red-500 text-sm mt-1">
                            {% for error in form.fullName.vars.errors %}
                                <p>{{error.message}}</p>
                            {% endfor %}
                        </div>
                        {% endif %}
                    </div>
                </div>

                <div class="mb-6 lg:w-2/4 px-2">
                    {{ form_label(form.email, 'Email', {'label_attr':{'class': 'text-lg font-medium text-slate-700'}}) }}
                    <div class="mt-2">
                        {{ form_widget(form.email, {'attr': {'class': 'w-full border-gray-300 rounded-md shadow-sm p-2 h-10'}}) }}
        
                        {% if form.email.vars.errors is not empty %}
                        <div class="text-red-500 text-sm mt-1">
                            {% for error in form.email.vars.errors %}
                            <p>{{error.message}}</p>
                        {% endfor %}
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>

                <div class="mb-6">
                    {{ form_label(form.subject, 'Subject', {'label_attr':{'class': 'text-lg font-medium text-slate-700'}}) }}
                    <div class="mt-2">
                        {{ form_widget(form.subject, {'attr': {'class': 'w-full border-gray-300 rounded-md shadow-sm p-2 h-10'}}) }}
        
                        {% if form.subject.vars.errors|length > 0 %}
                        <div class="text-red-500 text-sm mt-1">
                            {% for error in form.subject.vars.errors %}
                            <p>{{error.message}}</p>
                        {% endfor %}
                        </div>
                        {% endif %}
                    </div>
                </div>
            
                <div class="mb-6">
                {{ form_label(form.messages, 'Messages', {'label_attr':{'class': 'text-lg font-medium text-slate-700'}}) }}
                    <div class="mt-2">
                        {{ form_widget(form.messages, {'attr': {'class': 'w-full border-gray-300 rounded-md shadow-sm p-2 h-32 resize-y'}}) }}
        
                        {% if form.messages.vars.errors is not empty %}
                        <div class="text-red-500 text-sm mt-1">
                            {% for error in form.messages.vars.errors %}
                            <p>{{error.message}}</p>
                        {% endfor %}
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
    
            <button type="submit" class="w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-3 px-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 transition duration-300">
                Submit
            </button>
    
            {{ form_end(form) }}
          </div>
    </div>
</section>
{% endblock %}
