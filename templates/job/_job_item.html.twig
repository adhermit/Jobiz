<section class="text-slate-700 bg-white body-font">
    <div class="container px-5 py-24 mx-auto">
      <div class="flex flex-wrap -m-4">
        <div class="p-4 lg:w-1/3">
          <div class="h-full bg-gray-100 bg-opacity-75 px-8 pt-16 pb-24 rounded-lg overflow-hidden text-center relative">
            <h2 class="tracking-widest text-xs title-font font-medium text-gray-400 mb-1">Job Offer</h2>
            <span class="mt-1 text-slate-700 text-sm">{{ job.postDate|date('F j, Y') }}</span>
            <h1 class="title-font sm:text-2xl text-xl font-medium text-gray-900 mb-3">{{job.title}}</h1>
            <p class="leading-relaxed mb-3">{{ job.description|slice(0, 100) }}...</p>
            <a class="text-slate-700 bg-white inline-flex items-center" href="{{path('app_job_show', {'id':job.id})}}">View details
              <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path d="M5 12h14"></path>
                <path d="M12 5l7 7-7 7"></path>
              </svg>
            </a>            
          </div>
        </div>
      </div>
    </div>
  </section>