{% extends 'base.html.twig' %}


{% block title %}Category list{% endblock %}


{% block body %}
<section class="text-gray-400 bg-gray-900 body-font container px-5 py-14 mx-auto">
    <div class="container px-5 py-24 mx-auto">
    <h1 class="text-4xl font-medium title-font text-white mb-8"> {{category.type}}</h1>
      <div class="flex flex-wrap sm:-m-4 -mx-4 -mb-10 -mt-4">

          {% for job in category.jobs %}
          
        {% include 'job/_job_item.html.twig' with {'job': job} %}
            
        {% endfor %}
      </div>
    </div>
  </section>
{% endblock %}